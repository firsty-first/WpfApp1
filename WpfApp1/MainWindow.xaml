<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Bar (Left Side) -->
        <Border Grid.Column="0" Background="AliceBlue" Width="200">
            <StackPanel>
                <Button Content="Dashboard" Click="Dashboardclick" Margin="10"/>
                <Button Content="Reports" Margin="10"/>
                <Button Content="Settings" Margin="10"/>
                <Button Content="Logout" Margin="10"/>

            </StackPanel>
        </Border>
                   
        <!-- Content Area (Right Side) -->
        <Border Grid.Column="1" Background="White" Padding="20">
            <!-- You can place your content here -->
            
            
            
            
        </Border>

    </Grid>
</Window>








